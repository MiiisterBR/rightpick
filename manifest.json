{
  "manifest_version": 3,
  "name": "RightPick",
  "version": "1.1.0",
  "description": "A smart shopping assistant that checks product prices on Digikala and shows real Digikala user reviews while you browse on Torob and Esam helping you make the best possible choice.",
  "default_locale": "fa",
  "browser_specific_settings": {
    "gecko": {
      "id": "misterbr-rightpick@extension",
      "strict_min_version": "140.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "icons": {
    "16": "src/assets/icon/icon16.png",
    "48": "src/assets/icon/icon48.png",
    "128": "src/assets/icon/icon128.png",
    "256": "src/assets/icon/icon256.png"
  },
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": ["src/background/background.js"],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.digikala.com/product/*",
        "*://*.torob.com/p/*",
        "*://*.esam.ir/item/*"
      ],
      "js": ["src/content/content.js"],
      "css": ["src/content/content.css"]
    }
  ],
  "host_permissions": [
    "*://*.digikala.com/*",
    "*://api.torob.com/*",
    "*://api.esam.ir/*",
    "*://api2.esam.ir/*"
  ],
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/content/*.js", "src/content/**/*.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
